// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------------------------------------------------------
// 1. UPDATED USER MODEL (Includes Profile & Streak Data)
// ---------------------------------------------------------
model User {
  id       String @id @default(uuid())
  email    String @unique
  fullName String
  password String

  // --- Profile Identity ---
  avatarUrl String? // Stores the image name (e.g. "hero_2.png")

  // --- Growth & Habit ---
  currentStreak  Int      @default(0)
  lastActiveDate DateTime @default(now())
  level          Int      @default(1) // Backup for Tree Stage

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // --- Relations ---
  completedStories CompletedStory[]
  watchedShorts    UserShortHistory[]
}

// A model to store OTPs and reset tokens securely
model PasswordResetToken {
  id      String   @id @default(uuid())
  email   String
  token   String   @unique
  expires DateTime

  @@index([email])
}

// ---------------------------------------------------------
// 2. STORY CONTENT MODELS (Unchanged)
// ---------------------------------------------------------
model StoryTrail {
  id              String @id @default(uuid())
  title           String
  description     String
  imageUrl        String
  difficultyLevel Int

  segments    StorySegment[]
  completedBy CompletedStory[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model StorySegment {
  id          String  @id @default(uuid())
  type        String // "narration" or "choiceChallenge"
  textContent String  @db.Text
  audioUrl    String?
  orderIndex  Int     @default(0)

  imageUrl String?

  trailId    String
  storyTrail StoryTrail @relation(fields: [trailId], references: [id], onDelete: Cascade)

  challenge SingleChoiceChallenge?

  @@index([trailId])
}

model SingleChoiceChallenge {
  id                String  @id @default(uuid())
  prompt            String
  correctAnswerId   String
  correctFeedback   String?
  incorrectFeedback String?

  segmentId String       @unique
  segment   StorySegment @relation(fields: [segmentId], references: [id], onDelete: Cascade)

  choices Choice[]
}

model Choice {
  id       String  @id @default(uuid())
  text     String
  imageUrl String?

  challengeId String
  challenge   SingleChoiceChallenge @relation(fields: [challengeId], references: [id], onDelete: Cascade)

  @@index([challengeId])
}

// Join table to track user progress
model CompletedStory {
  userId      String
  storyId     String
  completedAt DateTime @default(now())

  user  User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  story StoryTrail @relation(fields: [storyId], references: [id], onDelete: Cascade)

  @@id([userId, storyId])
}

// ---------------------------------------------------------
// 3. SHORTS & HISTORY MODELS (Updated Relation)
// ---------------------------------------------------------
model LearningShort {
  id        String @id @default(uuid())
  youtubeId String @unique @map("youtube_id")

  // Metadata
  title        String
  description  String? @db.Text
  thumbnailUrl String? @map("thumbnail_url")
  channelName  String? @map("channel_name")
  duration     Int     @default(0)

  // Smart Tags
  difficultyLevel String @default("intermediate") @map("difficulty_level")
  category        String @default("general")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  watchedBy UserShortHistory[]

  @@map("learning_shorts")
}

model UserShortHistory {
  id      String @id @default(uuid())
  userId  String @map("user_id")
  shortId String @map("short_id")

  watchedAt DateTime @default(now()) @map("watched_at")
  isSaved   Boolean  @default(false) @map("is_saved")

  short LearningShort @relation(fields: [shortId], references: [id])

  // --- UPDATED: Connected this back to User model ---
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, shortId])
  @@map("user_short_history")
}
